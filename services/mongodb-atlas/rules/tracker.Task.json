{
    "collection": "Task",
    "database": "tracker",
    "roles": [
        {
            "name": "owner",
            "apply_when": {
                "ownerId": "%%user.id"
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true,
            "additional_fields": {}
        },
        {
            "name": "sharedWrite",
            "apply_when": {
              "%%true": {
                "%function": {
                  "name": "canWriteProject",
                  "arguments": ["%%root._id"]
                }
              }
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true,
            "additional_fields": {}
        },
        {
            "name": "sharedRead",
            "apply_when": {
              "%%true": {
                "%function": {
                  "name": "canReadProject",
                  "arguments": ["%%root._id"]
                }
              }
            },
            "read": true,
            "write": false,
            "insert": false,
            "delete": false,
            "search": true,
            "additional_fields": {}
        }
    ],
    "schema": {
        "bsonType": "object",
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "_partition": {
                "bsonType": "string"
            },
            "name": {
                "bsonType": "string"
            },
            "ownerId": {
                "bsonType": "string"
            },
            "status": {
                "bsonType": "string"
            }
        },
        "required": [
            "_id",
            "_partition",
            "name",
            "status"
        ],
        "title": "Task"
    }
}
