{
    "collection": "Project",
    "database": "tracker",
    "roles": [
        {
            "name": "owner",
            "apply_when": {
                "%%root.ownerId": "%%user.id"
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true,
            "additional_fields": {}
        },
        {
            "name": "sharedWrite",
            "apply_when": {
                "%%true": {
                    "%function": {
                        "arguments": [
                            "%%root._id"
                        ],
                        "name": "canWriteProject"
                    }
                }
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true,
            "additional_fields": {}
        },
        {
            "name": "sharedRead",
            "apply_when": {
                "%%true": {
                    "%function": {
                        "arguments": [
                            "%%root._id"
                        ],
                        "name": "canReadProject"
                    }
                }
            },
            "read": true,
            "write": false,
            "insert": false,
            "delete": false,
            "search": true,
            "additional_fields": {}
        }
    ],
    "schema": {
        "bsonType": "object",
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "_partition": {
                "bsonType": "string"
            },
            "name": {
                "bsonType": "string"
            },
            "ownerId": {
                "bsonType": "string"
            }
        },
        "required": [
            "_id",
            "_partition",
            "ownerId",
            "name"
        ],
        "title": "Project"
    }
}
